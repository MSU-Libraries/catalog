set nocompatible
syntax on
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set autoindent
set hlsearch
set noincsearch
set scrolloff=8
set tabpagemax=40
set hidden   " don't require buffers to be saved when switching to another

" Sane filename tab completion
set wildmode=longest,list

colorscheme ron
