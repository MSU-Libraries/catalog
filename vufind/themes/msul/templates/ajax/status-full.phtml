$holdingNum = $index = 0;
foreach ($this->statusItems as $item) {
  if ($selected == '') {
    $selected = $item;
    $holdingNum = $index;
  } 
  elseif ($selected['status'] != 'Available') {
    if ($item['status'] == 'Available' || ($selected['status'] != 'Restricted' && $item['status'] == 'Restricted')) {
      $selected = $item;
      $holdingNum = $index;
    }
  }
  $index++;
}
if ($selected != '') {
  $status = $record->getStatus($selected);
  $statusSuffix = $record->getStatusSuffix($selected);
  $location = $record->getLocation($holdingNum); // TODO
  //echo "get_class: " . get_class($record($this->driver)); // Catalog\View\Helper\Root\Record
